{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri-svelte",
  "version": "0.1.0",
  "identifier": "com.tauri-svelte.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Tom's Todo List",
        "width": 400,
        "height": 400,
        "minWidth": 400,
        "minHeight": 400,
        "alwaysOnTop": true
      }
    ],
    "trayIcon": {
        "iconPath": "icons/32x32.png",
        "title": "Tom's Todo App",
        "tooltip": "Todo Tooltip"
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
